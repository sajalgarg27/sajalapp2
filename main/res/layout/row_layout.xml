<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:id="@+id/card_view"
            android:layout_margin="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            app:cardBackgroundColor="#ffffff"
            android:layout_gravity="center"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/sample_0"
                        android:id="@+id/ngo_image"/>

                    <TextView
                        android:id="@+id/ngo_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="150dp"
                        android:padding="10dp"
                        android:text="Sajal Garg"
                        android:textColor="#000000" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="sajalgarg26@gmail.com"
                        android:padding="10dp"
                        android:textColor="#000000"
                        android:id="@+id/ngo_email"
                        android:layout_below="@+id/ngo_name"
                        android:layout_marginLeft="150dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="9716686404"
                        android:padding="10dp"
                        android:textColor="#000000"
                        android:layout_below="@+id/ngo_email"
                        android:id="@+id/ngo_contact"
                        android:layout_marginLeft="150dp" />

                 </RelativeLayout>

        </android.support.v7.widget.CardView>

</LinearLayout>